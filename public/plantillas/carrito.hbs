
{{#if carrito.length}}

    <table class="section-carrito--tabla">
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Marca</th>
            <th>Foto</th>
            <th>Cantidad</th>
            <th>Envio</th>
            <th>Accion</th>
        </tr>

        {{#each carrito}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{precio}}</td>
                <td>{{marca}}</td>
                <td>
                    <img style="display: block; margin: 0 auto;" src="{{imagen}}" width="50" alt="{{nombre}}">
                </td>
                <td>{{cantidad}}</td>

                {{#if envio}}
                    <td>Si</td>
                {{else}}
                    <td>No</td>
                {{/if}}    
                <td>
                    <button class="button" onclick="carritoController.borrarProductoCarrito('{{id}}')">borrar</button>
                </td>  
            </tr>
        {{/each}} 
    </table>
 <button class="button" onclick="carritoController.enviarCarrito()">Enviar</button>
{{else}}
    <h2>El carrito esta vacio</h2>
{{/if}} 
